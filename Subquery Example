/* 
Here is an example of a subquery in SQL.
This query aims to find the average amount paid by the top 5 Rockbuster Stealth customers.
*/

SELECT AVG(total_amount_paid) AS "Average"
FROM
(SELECT A.customer_id, A.first_name AS "customer_first_name", A.last_name AS
"customer_last_name", D.country, C.city, SUM(E.amount) AS "total_amount_paid"
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
INNER JOIN payment E ON A.customer_id = E.customer_id
WHERE city IN ('London', 'Aurora', 'Santiago de Compestela', 'Iwaki', 'Shanwei', 'Nador',
'Tianjin', 'Benguela', 'Rustenburg', 'Newcastle')
GROUP BY A.customer_id, first_name, last_name, country, city
ORDER BY "total_amount_paid" DESC
LIMIT 5) AS total_amount_paid;
